% Initialize the structure
myStruct = struct('selectedValue', '');

% Create the UI figure
fig = uifigure('Position',[100 100 300 200],'Name','Dropdown and Button UI');

% Create the dropdown menu
dropdown = uidropdown(fig,'Position',[50 120 200 22],'Items',{'Option 1','Option 2','Option 3'});

% Create the button
button = uibutton(fig,'push','Position',[50 80 200 30],'Text','Perform Action');

% Specify the callback function for the button
button.ButtonPushedFcn = @(~,~) performAction(dropdown.Value, myStruct);

% Define the function to perform the action based on the selected value in the dropdown
function performAction(selectedValue, myStruct)
    switch selectedValue
        case 'Option 1'
            disp('Option 1 selected. Performing action 1...');
            % Perform action 1
        case 'Option 2'
            disp('Option 2 selected. Performing action 2...');
            % Perform action 2
        case 'Option 3'
            disp('Option 3 selected. Performing action 3...');
            % Perform action 3
    end
    
    % Store the selected value in the structure
    myStruct.selectedValue = selectedValue;
end